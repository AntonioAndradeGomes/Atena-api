// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Event{
  id String @id @default(uuid())
  title String
  description String?
  isActive Boolean
  dificulty Int
  init_date DateTime
  end_date DateTime?
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt()

  @@map("events")
}



model User{
  id String @id @default(uuid())
  name String
  mail String @unique
  image_url String?
  type String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt()

  @@map("users")
}
